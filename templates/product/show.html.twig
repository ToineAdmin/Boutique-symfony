{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
	- La Boutique
{% endblock %}

{% block content %}
	<div class="row product-page-container">
		<div class="col-md-5">
			<img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
		</div>
		<div class="col-md-7 my-auto">
			<h3 class="">{{product.name}}</h3>
			<p>{{ product.subtitle }}</p>
			<hr>
			<p>{{ product.description }}</p>
			<hr>
			<span class="product-page-price">{{(product.price / 100) | number_format(2, ',', '.')}}€</span>
			{#} affiche le prix fois 100 donc le diviser et formater l'affichage {#}
			<hr>
			<a href="{{path('add_to_cart', {'id': product.id} )}}" class="btn btn-primary">Ajouter au panier</a>
			<a href="{{path('products')}}">Retour</a>
		</div>
	</div>
	<h2 class="text-center">
		Nos produits à la une
	</h2>
	<p class="text-center">Découvrez nos meilleurs ventes</p>
	<div class="row">
		{% for product in products %}
			<div class="col-md-3">
				{% include 'product/single_product.html.twig' %}
			</div>
		{% endfor %}
	</div>


{% endblock %}
