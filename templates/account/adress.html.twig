{% extends 'base.html.twig' %}

{% block title %}Mes Adresses - La boutique
{% endblock %}

{% block content %}

	<a href="{{path('account_adress_add')}}" class="btn btn-info float-right btn-sm">Ajouter une adresse</a>
	<h1>Mes adresses</h1>

	<a href="{{path('account')}}">Retour</a>
	<br>

	{% if app.user.adresses|length == 0 %}

		<div class="alert alert-info text-center">
			<p>Vous n'avez pas encore ajoutÃ© d'adresses. Pour le faire
				<a href="{{path('account_adress_add')}}">cliquez ici</a>
			</p>
		</div>

	{% else %}

		<div class="row mb-5">
        	{% for adress in app.user.adresses %}
			<div class="col-md-4">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{ adress.name }}
						</h5>
						<p classs="card-text">
                            {{ adress.adress }},<br>
                            {{ adress.postal}} - {{ adress.city }} - {{ adress.country}}
                        </p>
						<a href="{{ path('account_adress_update', { 'id' : adress.id })}}" >Modifier</a> | <a href="{{ path('account_adress_delete', { 'id' : adress.id })}}">Supprimer</a>
					</div>
				</div>
			</div>
            {% endfor %}
        </div>
	{% endif %}


{% endblock %}
